<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:id="@+id/snackBarLayout"
    tools:context=".Aariyan.Fragment.ConnectionStringFragment">

    <!--IP Address-->
    <TextView
        android:id="@+id/ipTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:text="@string/ipTitle"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/ipEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/ipTitle"
        app:layout_constraintTop_creator="1"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:layout_marginTop="5dp"
        android:hint="@string/ipTitle"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:paddingLeft="15dp"
        />

    <!--EMAIL Address-->
    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ipEditText"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:text="@string/emailTitle"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/emailTitle"
        app:layout_constraintTop_creator="1"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:layout_marginTop="5dp"
        android:hint="@string/emailTitle"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:paddingLeft="15dp"
        />

    <!--COMPANY Address-->
    <TextView
        android:id="@+id/companyNameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emailEditText"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:text="@string/companyNameTitle"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/companyNameEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/companyNameTitle"
        app:layout_constraintTop_creator="1"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:layout_marginTop="5dp"
        android:hint="@string/companyNameTitle"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:paddingLeft="15dp"
        />

    <!--DEVICE ID-->
    <TextView
        android:id="@+id/deviceIDTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/companyNameEditText"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:text="@string/deviceIdTitle"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/deviceIdTextView"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/deviceIDTitle"
        app:layout_constraintTop_creator="1"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:hint="@string/deviceIdTitle"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:paddingLeft="15dp"
        />

    <!--Registration KEY-->
    <TextView
        android:id="@+id/registrationKeyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/deviceIdTextView"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:text="@string/registrationKeyTitle"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/registrationKeyTextView"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/registrationKeyTitle"
        app:layout_constraintTop_creator="1"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:hint="@string/registrationKeyTitle"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:paddingLeft="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:text="@string/submitBtnText"
        android:layout_marginEnd="15dp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_ripple"
        android:id="@+id/submitRegBtn"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_height="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>