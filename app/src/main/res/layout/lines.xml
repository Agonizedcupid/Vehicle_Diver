<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1c7c2c2"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/closelines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_ripple_red"
        android:text="Close" />

    <ListView
        android:id="@+id/_orderdlistlines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/accept"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <com.github.gcacace.signaturepad.views.SignaturePad
        android:id="@+id/signature_pad_lines"
        android:layout_width="fill_parent"
        android:layout_height="136dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_light" />


    <Button
        android:id="@+id/acceptthesummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_ripple_green"
        android:text="Done" />

    <CheckBox
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_above="@+id/signature_pad_lines"
        android:layout_alignParentStart="true"
        android:text="Please Sign Below " />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />


</RelativeLayout>